
<div class="new-user__container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <h2 class='new-user__h2'>Log in</h2>
      <div class="new-user__form-container">

        <div class="new-user__field">
          <%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'field-input'%>
        </div>

        <div class="new-user__field">
          <%= f.password_field :password, placeholder:'password', class: 'field-input' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", 
          class: 'new-user__submit 
          bg-gradient-to-tl
          from-green-400
          to-indigo-600
          rounded-full
          ' 
          
          %>
        </div>

      </div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
