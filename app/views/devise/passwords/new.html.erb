
<div class="new-user__container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="forgot__h2-container">
      <h2 class='new-user__h2'>Forgot your password?</h2>
    </div>
    <div class="new-user__form-container">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="new-user__field">
        <%= f.email_field :email, autofocus: true, placeholder: "email", class: 'field-input' %>
      </div>

      <div class="actions">
        <%= f.submit "Send instructions", 
          class: 'new-user__submit 
          bg-gradient-to-tl
          from-green-400
          to-indigo-600
          rounded-full
          '
        
        %>
      </div>

    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
