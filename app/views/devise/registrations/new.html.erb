
<div class="new-user__container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class='new-user__h2' >Sign up</h2>

    <div class="new-user__form-container">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="new-user__field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'field-input' %>
      </div>

      <div class="new-user__field">
        <%= f.password_field :password, placeholder: "Password", class: 'field-input' %>
      </div>

      <div class="new-user__field">
        <%= f.password_field :password_confirmation, placeholder: "Repeat password", class: 'field-input' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", 
        class: 'new-user__submit 
          bg-gradient-to-tl
          from-green-400
          to-indigo-600
          rounded-full
          ' 
        %>
      </div>

    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>